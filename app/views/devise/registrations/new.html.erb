<div ng-app="app" ng-controller="SignUpCtrl">
  <div class="row">
    <div class="col-xs-12">
      <h4 class="text-center">Welcome to the Chainsearchers</h4>
    </div>
  </div>

  <div class="row">

    <div class="col-sm-6 col-sm-offset-3 col-xs-12">
      <div class="login-form-wrapper">
        <h2 class="text-center">Sign up</h2>

        <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
          <%= devise_error_messages! %>
          
          <div class="field form-group">
            <%= f.text_field :username, autofocus: true, class: "form-control login-control", placeholder: "Username", data: { 'ng-model' => 'username'} %>
          

          
            <p class="text-danger pull-left sign-up-warning" ng-show="usernameTaken">username is taken</p>
              
            
          </div>

          <div class="form-group">
            <%= f.email_field :email, autofocus: true, class: "form-control login-control", placeholder: "Email", data: { 'ng-model' => 'email' } %>
          

          
            <p class="text-danger pull-left sign-up-warning" ng-show="emailTaken">there is already an account registered to this email</p>
              

            
          </div>

          <div class="form-group">
            
            <% if @minimum_password_length %>
            <em>(<%= @minimum_password_length %> characters minimum)</em>
            <% end %><br />
            <%= f.password_field :password, class: "form-control login-control", placeholder: "Password", autocomplete: "off" %>
          </div>

          <div class="form-group">
            
            <%= f.password_field :password_confirmation, class: "form-control login-control", placeholder: "Confirm Password", autocomplete: "off" %>
          </div>

          <div class="actions form-group">
            <%= f.submit "Sign up", class: "btn btn-primary btn-block" %>
          </div>
        <% end %>

        <%= render "devise/shared/links" %>
       </div>
    </div>
  </div>
</div>

